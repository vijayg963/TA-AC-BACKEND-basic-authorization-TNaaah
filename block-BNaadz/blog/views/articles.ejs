<%- include('./partials/cdnlinks.ejs')%> <%-
include('./partials/articleheader.ejs')%>

<!-- this will contains all the  articles  -->
<main>
  <section class="allarticles w-100 h-screen px-[9%]">
    <div
      class="h-100 w-100 flex justify-between flex-wrap"
    >
      <%articles.forEach(cv=>{ %>
      <article
        class="grow-0 shrink basis-1/3  max-w-sm rounded overflow-hidden shadow-lg px-6 py-4"
      >
        <p class="font-bold text-xl mb-2"><%= cv.title%></p>
        <p class="text-2xl my-10"><%= cv.description%></p>
        <div>
          <a
            href="/articles/<%=cv.slug%>"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >readmore</a
          >
        </div>
      </article>
      <% })%>
    </div>
  </section>
</main>
