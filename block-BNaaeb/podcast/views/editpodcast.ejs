<%- include('./partials/cdnfile.ejs')%>
<h2 class="text-center font-2xl font-extrabold"> Edit  the podcast</h2>
<main>
    <section
      class="article-form-container flex justify-center items-center h-screen"
    >
      <div class="form-container">
        <form action="/podcasts/<%= podcast._id%>/edit" method="POST" enctype="multipart/form-data">
          <label for="name" class="font-extrabold">Podcast name</label>
          <input
            type="text"
            name="name"
            placeholder="Enter name of the podcast  here "
            id="name"
            class="appearance-none mb-4 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            value = "<%= podcast.name%>"
          />
          <label for="artist" class="font-extrabold">Podcast Artist</label>
          <input
            type="text"
            name="artist"
            placeholder="Enter podcast artist  here "
            id="artist"
            class="appearance-none mb-4 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            value = "<%= podcast.artist%>"
          />
          <label for="description" class="font-extrabold">Podcast description</label>
          <input
            type="text"
            name="description"
            placeholder="description of  the podcast"
            id="description"
            class="appearance-none mb-4 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            value = "<%= podcast.description%>"
          /> 
          <label for="image" class="font-extrabold">Podcast image</label>
          <input type="file" name="image" id="image" class="my-5" />
          <label for="productplan
          " class="font-extrabold block">Podcast Category(free , premium , vip)</label>
          <input
            type="text"
            name="podcastplan"
            placeholder="Category of  the podcast ( free , vip , premium)"
            id="podcastplan"
            class="appearance-none mb-4 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            value = "<%= podcast.podcastplan%>"
          /> 
          <button
            type="submit"
            value="submit"
            id="submit-btn"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            submit
          </button>
        </form>
      </div>
    </section>
  </main>