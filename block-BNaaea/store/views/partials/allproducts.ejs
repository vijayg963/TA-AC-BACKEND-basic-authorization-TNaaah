<%products.forEach(cv=>{%>
    <div
      class="rounded overflow-hidden shadow-lg my-5 flex flex-col h-[420px]"
    >
      <img
        class="w-full h-[50%] cover object-cover"
        src="/uploads/<%= cv.image%>"
      />
      <div class="px-6 py-2">
        <div class="font-bold text-xl mb-2"><%= cv.name%></div>
        <div class="flex justify-between">
          <p class="text-gray-700 text-base">Price : <%= cv.price%></p>
          <p class="text-gray-700 text-base">in Stock : <%= cv.quantity%></p>
          <p class="text-gray-700 text-base">Total likes : <%= cv.likes%></p>
        </div>
      </div>
      <div class="px-6 pt-4 pb-2 flex justify-between">
        <% if(user.isadmin) {%>
        <button
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >
          <a href="/products/edit/<%= cv._id%>">edit</a>
        </button>
        <button
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >
          <a href="/products/<%= cv._id%>/delete">delete</a>
        </button>
        <%}%>
        <button
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >
          <a href="/products/<%= cv._id%>/like">like</a>
        </button>

        <!-- if the registered user is not a but not admin then he can add products to the card  -->
        <% if(!user.isadmin){%>
        <a
          href="/products/<%= cv._id %>/addtocart/"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
          >addToCard</a
        >
        <%}%>
      </div>
    </div>
    <%})%>